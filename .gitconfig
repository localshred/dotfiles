[core]
  editor = vim
  excludesfile = ~/.gitignore
[color]
  status = auto
  interactive = auto
  grep = auto
  branch = auto
  diff = auto
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[user]
  name = BJ Neilsen
  email = bj.neilsen@gmail.com
[alias]
  amend       = commit --amend
  br          = branch
  bra         = branch -a
  brd         = branch -d
  brdf        = branch -D
  brc         = rev-parse --abbrev-ref HEAD
  ch          = cherry
  ci          = commit -v
  cia         = commit -av
  co          = checkout
  conflicts   = !vim $(git diff --name-only --diff-filter=U)
  cob         = checkout -b
  ctags       = !.git/hooks/ctags
  di          = diff
  diffc       = diff --cached --
  diffn       = diff --name-only
  diffnorigin = diff origin/master --name-only
  last        = log -1 HEAD
  ls          = ls-remote .
  mine        = !git log --author=`git config user.email`
  mr          = !lab mr new
  pgm         = push github master
  phm         = push heroku master
  pr          = pull-request
  pu          = push -u
  pum         = push upstream master
  rba         = rebase --abort
  rbc         = rebase --continue
  rbm         = rebase master
  recent      = log --oneline -10
  sha         = log -1 --oneline HEAD
  softrm      = rm --cached --
  softrmdir   = rm --cached -r --
  st          = status
  sta         = stash
  unstage     = reset HEAD --
  yoink       = cherry-pick
  amend       = commit --amend
  ammend      = commit --amend
  catchup     = log --patch --reverse --topo-order _ribbon..origin/master
  cpk         = cherry-pick
  idff        = diff
  logp        = log --oneline --abbrev-commit --graph --decorate
  ribbon      = tag --force _ribbon origin/master
  stl         = stash list
  stp         = stash pop
  undo        = reset --soft HEAD~1
[branch]
  autosetuprebase = remote
[github]
  user = localshred
[push]
  default = current
[init]
  templatedir = ~/.git_template
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@bitbucket.org:"]
 	insteadOf = https://bitbucket.org/
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
